<% include ../partials/header %>

<div class="container">
  <h1 class="text-center">Edit <%= campground.name %></h1>

  <div class="row justify-content-center mt-2">

    <div class="col-6">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control"" type="text" value="<%= campground.name %>" name="name" />
        </div>

        <div class="form-group">
          <input class="form-control" type="text" value="<%= campground.image %>" name="image" />
        </div>

        <div class="form-group">
          <textarea class="form-control" type="text" name="description"><%= campground.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>

      <a href="/campgrounds">Back</a>
    </div>

  <div>
</div>

</div>

<% include ../partials/footer %>
