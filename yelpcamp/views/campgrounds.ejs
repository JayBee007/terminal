<% include partials/header %>

  <div class="container>
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Yelpcamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary" href="/campgrounds/new">Add New</a>
      </div>
    </header>

    <div class="container">
      <p>Our Most Popular Campgrounds</p>
      <div class="row">

        <% campgrounds.forEach(campground => { %>
          <div class="col-md-4">
            <figure class="figure">
              <img src="<%= campground.image %>" class="figure-img img-fluid rounded" alt="<%= campground.name %>">
              <figcaption class="figure-caption"><%= campground.name %></figcaption>
            </figure>
          </div>
        <% }) %>

      </div>
    </div>

  </div>
<% include partials/footer %>
